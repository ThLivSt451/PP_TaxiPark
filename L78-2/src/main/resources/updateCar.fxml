<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="taxiPark.application.UpdateCarController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="372.0" prefWidth="372.0" spacing="10.0">
            <children>
                <Label text="Оновлення інформації про автомобіль" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefWidth="150.0" text="Модель:" />
                        <TextField fx:id="modelField" prefWidth="200.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefWidth="150.0" text="Ціна:" />
                        <TextField fx:id="priceField" prefWidth="200.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefWidth="150.0" text="Витрата пального:" />
                        <TextField fx:id="fuelConsumptionField" prefWidth="200.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefWidth="150.0" text="Максимальна швидкість:" />
                        <TextField fx:id="maxSpeedField" prefWidth="200.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefWidth="150.0" text="Тип:" />
                        <TextField fx:id="typeField" prefWidth="200.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleOk" prefWidth="100.0" text="Зберегти" />
                        <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0" text="Скасувати" />
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>